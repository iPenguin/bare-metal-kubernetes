nameOverride: argocd

createAggregateRoles: false
createClusterRoles: true

global:
  domain: argocd.clt.milco.casa

  affinity:
    podAntiAffinity: soft
    nodeAffinity:
      type: hard
      matchExpressions: []
  dualStack:
    ipFamilyPolicy: PreferDualStack
    ipFamilies:
      - IPv4
      - IPv6

configs:
  cm:
    create: true
    admin.enabled: true
    url: https://argocd.clt.milco.casa/

    resource.exclusions: |
      - apiGroups:
        - velero.io
        kinds:
        - Backup
        clusters:
        - "*"

    dex.config: |
      connectors:
      - type: ldap
        name: freeipa-ldap
        id: ldap
        config:
          host: "ldap.clt.milco.casa:123"
          insecureNoSSL: false
          insecureSkipVerify: false
          bindDN: "$ldap.bindDN"
          bindPW: "$ldap.bindPW"
          usernamePrompt: Username
          userSearch:
            baseDN: "memberOf=argo,ou=users,dc=auth,dc=milco,dc=casa"
            filter: ""
            username: uid
            idAttr: uid
            emailAttr: mail
            nameAttr: displayName
          groupSearch:
            baseDN: "cn=argo,ou=groups,dc=auth,dc=milco,dc=casa"
            filter: "(objectClass=groupOfNames)"
            userAttr: DN
            groupAttr: member
            nameAttr: cn

  params:
    server.insecure: true
  rbac:
    create: true

  ssh:
    create: true
    extraHosts: ''

dex:
  enabled: false
  name: dex-server
  extraArgs: []

server:
  name: server
  replicas: 1
  ingress:
    enabled: true
    ingressClassName: "traefik"
    tls: true

  service:
    type: ClusterIP
