---
apiVersion: v1
kind: Pod
metadata:
  name: kube-vip
  namespace: kube-system
  labels:
    app: kube-vip
spec:
  containers:
    - args:
        - manager
      env:
        - name: vip_arp
          value: "true"
        - name: vip_ndp
          value: "true"
        - name: port
          value: "6443"
        - name: vip_interface
          value: "{{ ansible_default_ipv4.interface }}"
        - name: vip_cidr
          value: "32"
        - name: cp_enable
          value: "true"
        - name: cp_namespace
          value: "kube-system"
        - name: vip_ddns
          value: "false"
        - name: svc_enable
          value: "true"
        - name: vip_leaderelection
          value: "true"
        - name: vip_leaseduration
          value: "5"
        - name: vip_renewdeadline
          value: "3"
        - name: vip_retryperiod
          value: "1"
        - name: lb_enabled
          value: "true"
        - name: lb_port
          value: "6443"
        - name: lb_fwdmethod
          value: local
        - name: vip_address
          value: "{{ network_services.vip.ipv4 }}"
        - name: vip_address_ipv6
          value: "{{ network_services.vip.ipv6 }}"
        - name: prometheus_server
          value: ":2112"
      image: ghcr.io/kube-vip/kube-vip:v{{ kube_vip_version }}
      imagePullPolicy: IfNotPresent
      name: kube-vip
      securityContext:
        capabilities:
          add:
            - NET_ADMIN
            - NET_RAW
      volumeMounts:
        - mountPath: /etc/kubernetes/admin.conf
          name: kubeconfig
  hostAliases:
    {% for host in groups['controllers'] -%}
    - ip: {{ (dns_entries | selectattr('item', 'equalto', host) | list)[0].stdout }}
      hostnames:
        - {{ host }}
    {% endfor %}

    - ip: 127.0.0.1
      hostnames:
        - kubernetes
  hostNetwork: true
  volumes:
    - hostPath:
        path: /etc/kubernetes/admin.conf
      name: kubeconfig

