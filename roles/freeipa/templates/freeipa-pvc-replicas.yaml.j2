{% for i in range( ipa_counter | int ) %}
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: ipa-{{ "%02d" | format( i + 1 ) }}-data
  namespace: {{ ipa_namespace }}
spec:
  storageClassName: ceph-block
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 10Gi
{% endfor %}
