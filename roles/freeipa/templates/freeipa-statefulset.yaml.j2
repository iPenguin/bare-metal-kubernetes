{% for i in range( ipa_counter | int ) %}
---
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: ipa-{{ "%02d" | format( i + 1 ) }}
  namespace: {{ ipa_namespace }}
spec:
  selector:
    matchLabels:
      app: freeipa # has to match .spec.template.metadata.labels
  serviceName: "freeipa"
  replicas: 1
  minReadySeconds: 10 # by default is 0
  template:
    metadata:
      labels:
        app: freeipa # has to match .spec.selector.matchLabels
    spec:
      resources:
        requests:
          memory: "512Mi"
          cpu: "250m"
      terminationGracePeriodSeconds: 10
      affinity:
        podAntiAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
          - labelSelector:
              matchExpressions:
              - key: app
                operator: In
                values:
                - freeipa
            topologyKey: "kubernetes.io/hostname"
      dnsPolicy: "None"
      dnsConfig:
        nameservers:
          - 1.1.1.3
          - 10.1.1.1
      containers:
        - name: freeipa
          image: quay.io/freeipa/freeipa-server:{{ ipa_docker_os }}-{{ freeipa_version }}
          readinessProbe:
            exec:
              command: ["/usr/bin/systemctl", "is-active", "--quiet", "ipa"]
            successThreshold: 1
            failureThreshold: 3
          livenessProbe:
            httpGet:
              path: /
              port: 80
            failureThreshold: 5
          startupProbe:
            httpGet:
              path: /
              port: 80
            # NOTE: if initial installation fails, try increasing this value:
            failureThreshold: 50
            periodSeconds: 30
          env:
            - name: TZ
              value: "{{ timezone }}"
            - name: IPA_SERVER_HOSTNAME
              value: "ipa-{{ "%02d" | format( i + 1 ) }}.{{ lan_domain }}"

          {% if i == 0 %}

            - name: IPA_SERVER_INSTALL_OPTS
              valueFrom:
                secretKeyRef:
                  name: ipa-{{ "%02d" | format( i + 1 ) }}-install-secrets
                  key: IPA_OPTIONS

          {% else %}

            - name: IPA_SERVER_INSTALL_OPTS
              valueFrom:
                secretKeyRef:
                  name: ipa-{{ "%02d" | format( i + 1 ) }}-install-secrets
                  key: IPA_REPLICA_OPTIONS
            - name: PASSWORD
              valueFrom:
                secretKeyRef:
                  name: ipa-{{ "%02d" | format( i + 1 ) }}-install-secrets
                  key: IPA_ADMIN_PASSWORD
          args: [ "{%- if i > 0 -%}ipa-replica-install{%- endif -%}" ]
          {% endif %}

          securityContext:
            capabilities:
              add: 
                - SYS_TIME
                - NET_BIND_SERVICE
            seccompProfile:
              type: Unconfined
          stdin: true
          tty: true
          ports:
            - containerPort: 53 # dns
            - containerPort: 53 # dns
              protocol: UDP
            - containerPort: 80 # http
            - containerPort: 88 # kerberos
            - containerPort: 88 # kerberos
              protocol: UDP
            - containerPort: 123 # ntp
            - containerPort: 123 # ntp
              protocol: UDP
            - containerPort: 389 # ldap
            - containerPort: 443 # https
            - containerPort: 464 # kpasswd
            - containerPort: 464 # kpasswd
              protocol: UDP
            - containerPort: 636 # ldaps
          volumeMounts:
            - name: ipa-data
              mountPath: /data
            - name: cgroups
              mountPath: /sys/fs/cgroup
            - name: run
              mountPath: /run
            - name: run-systemd
              mountPath: /run/systemd
            - name: tmp
              mountPath: /tmp
      hostname: "ipa-{{ "%02d" | format( i +1 ) }}.{{ lan_domain }}"
      volumes:
        - name: ipa-data
          persistentVolumeClaim:
            claimName: ipa-{{ "%02d" | format( i +1 ) }}-data
        - name: cgroups
          hostPath:
            path: /sys/fs/cgroup
        - name: run
          emptyDir:
            medium: Memory
        - name: run-systemd
          emptyDir:
            medium: Memory
        - name: tmp
          emptyDir:
            medium: Memory
        - name: data
{% endfor %}
